<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/couponItemDetail"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:layout_height="74dp">

        <ImageView
            android:id="@+id/edit_coupons_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/star"/>

        <CheckBox
            android:id="@+id/couponCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/coupon_checkbox"
            android:text=""/>

        <TextView
            android:id="@+id/edit_coupons_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@+id/edit_coupons_image"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/edit_coupons_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_coupons_item_name"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/edit_coupons_item_name"
            android:layout_toLeftOf="@+id/couponCheckBox"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
    </RelativeLayout>
</LinearLayout>
